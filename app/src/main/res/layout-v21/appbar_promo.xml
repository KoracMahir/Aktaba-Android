<?xml version="1.0" encoding="utf-8"?>
<Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/promo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/menu_1"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:background="@drawable/ic_sendwich"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="14dp"/>

        <Button
            android:id="@+id/logo_btn_promo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"/>
        <Button
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_baseline_search_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/logo_btn_promo"
            android:layout_marginTop="14dp"
            android:layout_marginRight="31dp"
            android:id="@+id/search_btn_promo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_extrabold"
            android:text="Promo"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/menu_1"
            app:layout_constraintLeft_toRightOf="@id/menu_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</Toolbar>
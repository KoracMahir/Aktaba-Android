<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main.Home"
    android:orientation="vertical">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/topbar"
        android:paddingBottom="7dp"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@color/akta_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/home_btn"
                android:layout_marginLeft="28dp"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_home" />
            <Button
                android:id="@+id/vijesti_btn"
                android:layout_marginLeft="30dp"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="vijesti"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:background="#00FFFFFF"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/investicije_btn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="investicije"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:background="#00FFFFFF"
                android:textSize="15dp"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="kapital"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:background="#00FFFFFF"
                android:textSize="15dp"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="eu"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:background="#00FFFFFF"
                android:textSize="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="najave"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:background="#00FFFFFF"
                android:textSize="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ličnosti"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:background="#00FFFFFF"
                android:textSize="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="karijera"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:background="#00FFFFFF"
                android:textSize="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="kolumna"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:background="#00FFFFFF"
                android:textSize="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="pauza"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:background="#00FFFFFF"
                android:textSize="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="analize"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans"
                android:background="#00FFFFFF"
                android:textSize="15dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <fragment
        android:id="@+id/homefragment1"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defaultNavHost="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_graph_sections"/>

</LinearLayout>
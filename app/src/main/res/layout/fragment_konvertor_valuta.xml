<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main.home.KonvertorValutaFragment">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image_example"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/vrijednost"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Vrijednost"
        android:background="@drawable/okvir_plava"
        app:layout_constraintTop_toBottomOf="@id/img1"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/open_sans"
        android:textSize="12dp"
        android:paddingLeft="14dp"/>

    <TextView
        android:id="@+id/srednji"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Srednji za devize"
        android:background="@drawable/okvir_plava"
        app:layout_constraintTop_toBottomOf="@id/vrijednost"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/open_sans"
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"/>
    <LinearLayout
        android:id="@+id/linear1"
        app:layout_constraintTop_toBottomOf="@id/srednji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <TextView
            android:layout_weight="1"
            android:id="@+id/iz"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Srednji za devize"
            android:background="@drawable/okvir_plava"
            app:layout_constraintTop_toBottomOf="@id/vrijednost"
            android:layout_marginTop="13dp"
            android:layout_marginRight="2.5dp"
            android:fontFamily="@font/open_sans"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/u"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Srednji za devize"
            android:background="@drawable/okvir_plava"
            app:layout_constraintTop_toBottomOf="@id/vrijednost"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="2.5dp"
            android:fontFamily="@font/open_sans"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/izracunaj"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        android:background="@color/akta_blue"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="IZRAČUNAJ"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_bold"/>

    <Button
        android:id="@+id/ponisti"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/izracunaj"
        android:background="#9AA6AC"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="PONIŠTI"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/circle_border_promo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>
    <View
        android:id="@+id/slicica_kategorije"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/slicica_kategorije"
        app:layout_constraintBottom_toBottomOf="@id/slicica_kategorije"
        app:layout_constraintLeft_toRightOf="@id/slicica_kategorije"
        android:text="TURIZAM I GASTRO"
        android:layout_marginLeft="13dp"
        android:textColor="@color/text"
        android:id="@+id/text_kategorija"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main.home.BerzaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Button
                android:id="@+id/sase_btn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@color/akta_blue"
                android:textColor="@color/white"
                android:text="berza sase"/>
            <Button
                android:id="@+id/blse_btn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/okvir_plava"
                android:textColor="@color/akta_blue"
                android:text="berza blase"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAJVEĆI RAST"
            android:textColor="@color/akta_blue"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintTop_toBottomOf="@id/bar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/text1"
            />


        <HorizontalScrollView
            android:id="@+id/horizontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintLeft_toLeftOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@color/akta_blue"
                        android:layout_width="225dp"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/code"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:text="Eminent"
                            android:textColor="@color/white"
                            android:fontFamily="@font/open_sans_bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:layout_marginRight="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/promjena"
                        android:layout_width="146dp"
                        android:layout_height="30dp"
                        android:text="Eminent promjena"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/kurs"
                        android:layout_width="51dp"
                        android:layout_height="30dp"
                        android:text="Kurs"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/promet"
                        android:layout_width="71dp"
                        android:layout_height="30dp"
                        android:text="Promet"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_rast"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/linear"
                    tools:itemCount="4"
                    tools:listitem="@layout/berza_item"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAJVEĆI PAD"
            android:textColor="@color/akta_blue"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintTop_toBottomOf="@id/horizontal1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/text2"
            />
        <HorizontalScrollView
            android:id="@+id/horizontal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text2"
            app:layout_constraintLeft_toLeftOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@color/akta_blue"
                        android:layout_width="225dp"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/code2"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:text="Eminent"
                            android:textColor="@color/white"
                            android:fontFamily="@font/open_sans_bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:layout_marginRight="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/promjena2"
                        android:layout_width="146dp"
                        android:layout_height="30dp"
                        android:text="Eminent promjena"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/kurs2"
                        android:layout_width="51dp"
                        android:layout_height="30dp"
                        android:text="Kurs"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/promet2"
                        android:layout_width="71dp"
                        android:layout_height="30dp"
                        android:text="Promet"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_pad"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/linear"
                    tools:itemCount="4"
                    tools:listitem="@layout/berza_item"/>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAJVEĆI PAD"
            android:textColor="@color/akta_blue"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintTop_toBottomOf="@id/horizontal2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/text3"
            />
        <HorizontalScrollView
            android:id="@+id/horizontal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text3"
            app:layout_constraintLeft_toLeftOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@color/akta_blue"
                        android:layout_width="225dp"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/code3"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:text="Eminent"
                            android:textColor="@color/white"
                            android:fontFamily="@font/open_sans_bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:layout_marginRight="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/promjena3"
                        android:layout_width="146dp"
                        android:layout_height="30dp"
                        android:text="Eminent promjena"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/kurs3"
                        android:layout_width="51dp"
                        android:layout_height="30dp"
                        android:text="Kurs"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/promet3"
                        android:layout_width="71dp"
                        android:layout_height="30dp"
                        android:text="Promet"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_promet"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/linear"
                    tools:itemCount="4"
                    tools:listitem="@layout/berza_item"/>
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
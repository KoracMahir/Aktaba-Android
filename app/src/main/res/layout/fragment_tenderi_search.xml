<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main.tenderi.TenderiSearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/search_tender"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/orange"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRETRAGA TENDERA"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/search_tender"
            app:layout_constraintBottom_toBottomOf="@id/search_tender"
            app:layout_constraintLeft_toLeftOf="@id/search_tender"
            android:elevation="3dp"
            android:layout_marginLeft="31dp"
            android:textStyle="bold"
            android:id="@+id/text1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_white_arrow_right"
            app:layout_constraintTop_toTopOf="@id/search_tender"
            app:layout_constraintRight_toRightOf="@id/search_tender"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="@id/search_tender"
            android:layout_marginRight="28dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/search_tender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/okvir_orange"
                android:text="Naziv"
                android:textSize="12dp"
                android:textColor="@color/siva_text"
                android:paddingLeft="21dp"/>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/okvir_orange"
                android:text="Broj tendera"
                android:textSize="12dp"
                android:textColor="@color/siva_text"
                android:paddingLeft="21dp"/>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/okvir_orange"
                android:textSize="12dp"
                android:text="Naziv firme/ID broj"
                android:textColor="@color/siva_text"
                android:paddingLeft="21dp"/>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/okvir_orange"
                android:textSize="12dp"
                android:text="Svi"
                android:textColor="@color/siva_text"
                android:paddingLeft="21dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/okvir_orange"
                    android:textSize="12dp"
                    android:text="Svi"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/siva_text"
                    android:paddingLeft="21dp"/>
                <EditText
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/okvir_orange"
                    android:textSize="12dp"
                    android:text="Svi"
                    android:textColor="@color/siva_text"
                    android:paddingLeft="21dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/okvir_orange"
                    android:textSize="12dp"
                    android:text="Svi"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/siva_text"
                    android:paddingLeft="21dp"/>
                <EditText
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/okvir_orange"
                    android:textSize="12dp"
                    android:text="Svi"
                    android:textColor="@color/siva_text"
                    android:paddingLeft="21dp"/>
            </LinearLayout>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/okvir_orange"
                android:textSize="12dp"
                android:text="CPV/JRJN"
                android:textColor="@color/siva_text"
                android:paddingLeft="21dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/country_editbox"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/okvir_orange"
                    android:textSize="12dp"
                    android:text="BIH"
                    android:textColor="@color/siva_text"
                    android:paddingLeft="21dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_orange_arrow_down"
                    app:layout_constraintTop_toTopOf="@id/country_editbox"
                    app:layout_constraintRight_toRightOf="@id/country_editbox"
                    android:elevation="3dp"
                    app:layout_constraintBottom_toBottomOf="@id/country_editbox"
                    android:layout_marginRight="28dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/okvir_orange"
                android:textSize="12dp"
                android:text="Tip"
                android:textColor="@color/siva_text"
                android:paddingLeft="21dp"/>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/okvir_orange"
                android:textSize="12dp"
                android:text="Vrsta ugovora"
                android:textColor="@color/siva_text"
                android:paddingLeft="21dp"/>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/okvir_orange"
                android:textSize="12dp"
                android:text="Vrsta obavještenja"
                android:textColor="@color/siva_text"
                android:paddingLeft="21dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/pretrazi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/orange"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRETRAŽI"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/pretrazi"
                    app:layout_constraintBottom_toBottomOf="@id/pretrazi"
                    app:layout_constraintLeft_toLeftOf="@id/pretrazi"
                    app:layout_constraintRight_toRightOf="@id/pretrazi"
                    android:elevation="3dp"
                    android:textStyle="bold"
                    android:id="@+id/text2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/ponisiti_pretragu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/siva"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PONISTI PRETRAGU"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/ponisiti_pretragu"
                    app:layout_constraintBottom_toBottomOf="@id/ponisiti_pretragu"
                    app:layout_constraintLeft_toLeftOf="@id/ponisiti_pretragu"
                    app:layout_constraintRight_toRightOf="@id/ponisiti_pretragu"
                    android:elevation="3dp"
                    android:textStyle="bold"
                    android:id="@+id/text3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp">
                <Button
                    android:id="@+id/brza_pretraga"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/okvir_orange"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRETRAGA TENDERA"
                    android:textColor="#C88C00"
                    app:layout_constraintTop_toTopOf="@id/brza_pretraga"
                    app:layout_constraintBottom_toBottomOf="@id/brza_pretraga"
                    app:layout_constraintLeft_toLeftOf="@id/brza_pretraga"
                    android:elevation="3dp"
                    android:layout_marginLeft="31dp"
                    android:textStyle="bold"
                    android:id="@+id/text4"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_orange_arrow_down"
                    app:layout_constraintTop_toTopOf="@id/brza_pretraga"
                    app:layout_constraintRight_toRightOf="@id/brza_pretraga"
                    android:elevation="3dp"
                    app:layout_constraintBottom_toBottomOf="@id/brza_pretraga"
                    android:layout_marginRight="28dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
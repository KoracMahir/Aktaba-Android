<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/pratim_naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="BH TELECOM D.D. SARAJEVO"
        android:textColor="@color/akta_darkblue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/close_btn"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:background="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="@id/pratim_naslov"
        app:layout_constraintBottom_toBottomOf="@id/pratim_naslov"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
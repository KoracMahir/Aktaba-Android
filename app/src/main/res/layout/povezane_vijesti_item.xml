<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/image_vijesti_2"
        android:layout_width="152dp"
        android:layout_height="74dp"
        android:layout_marginTop="4dp"
        android:scaleType="center"
        android:src="@drawable/image_example"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/big_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/open_sans_extrabold"
        android:text="Evo koje izmjene donosi Zakon o porezu na dobit FBiH"
        android:textColor="@color/text"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@id/image_vijesti_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_vijesti_2"/>

    <TextView
        android:id="@+id/text_datum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/open_sans"
        android:text="VIJESTI/BOSNA I HERCEGOVINA"
        android:textColor="@color/siva_text"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/image_vijesti_2"
        app:layout_constraintTop_toBottomOf="@id/big_text" />


</androidx.constraintlayout.widget.ConstraintLayout>
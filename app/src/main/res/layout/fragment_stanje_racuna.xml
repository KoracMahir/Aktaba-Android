<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".fragments.main.mojRegistar.sections.StanjeRacunaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/fragment5"
            android:name="com.mezet.actaandroid.fragments.main.mojProfil.FirmaHeaderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/view13"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/border_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment5" />

        <TextView
            android:id="@+id/textView173"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="STANJE TRANSAKCIONIH RAČUNA"
            android:textColor="@color/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view13" />

        <TextView
            android:id="@+id/textView181"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:fontFamily="@font/open_sans"
            android:text="Ažurirano na dnevnoj osnovi iz  jedinstvenog registra Centalne banke."
            android:textColor="@color/text"
            android:textSize="@dimen/text_13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView173" />

        <ImageView
            android:id="@+id/imageView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView181"
            app:layout_constraintStart_toEndOf="@+id/textView181"
            app:srcCompat="@drawable/ic_info"
            app:tint="@color/akta_cyan" />

        <TextView
            android:id="@+id/textView174"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans"
            android:text="BROJ AKTIVNIH RAČUNA"
            android:textColor="@color/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView181" />

        <TextView
            android:id="@+id/textView176"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/open_sans"
            android:text="BROJ BLOKIRANI RAČUNA"
            android:textColor="@color/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView174" />

        <TextView
            android:id="@+id/textView177"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/open_sans"
            android:text="BROJ UGAŠENIH RAČUNA"
            android:textColor="@color/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView176" />

        <TextView
            android:id="@+id/textView178"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="79"
            android:textColor="@color/akte_darkgreen"
            app:layout_constraintLeft_toLeftOf="@id/textView174"
            app:layout_constraintTop_toTopOf="@id/textView174" />

        <TextView
            android:id="@+id/textView179"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="0"
            android:textColor="@color/akta_red"
            app:layout_constraintLeft_toLeftOf="@id/textView174"
            app:layout_constraintTop_toTopOf="@+id/textView176" />

        <TextView
            android:id="@+id/textView180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:fontFamily="@font/open_sans"
            android:text="64"
            android:textColor="@color/text"
            app:layout_constraintLeft_toLeftOf="@id/textView174"
            app:layout_constraintTop_toTopOf="@id/textView177" />

        <Button
            android:id="@+id/button32"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/akta_cyan"
            android:fontFamily="@font/open_sans_bold"
            android:text="IZVJEŠTAJ O RAČUNIMA KOMPANIJE"
            android:textColor="@color/white"
            android:textSize="@dimen/sesnaest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView180" />

        <Button
            android:id="@+id/button34"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/akta_cyan"
            android:fontFamily="@font/open_sans_bold"
            android:text="IZVJEŠTAJ O PROMJENI GLAVNOG RAČUNA"
            android:textColor="@color/white"
            android:textSize="@dimen/sesnaest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button32" />

        <View
            android:id="@+id/view16"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/border_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button34" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:text="STANJE TRANSAKCIONIH RAČUNA\nGLAVNI RAČUN"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintTop_toBottomOf="@id/view16"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/glavni_text"
            android:layout_marginLeft="30dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="1"
            tools:listitem="@layout/izvjestaj_item"
            android:id="@+id/stanje_glavnih"
            app:layout_constraintTop_toBottomOf="@id/glavni_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:text="STANJE TRANSAKCIONIH RAČUNA\nAKTIVNI RAČUNI"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintTop_toBottomOf="@id/stanje_glavnih"
            android:layout_marginTop="55dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/aktivni_text"
            android:layout_marginLeft="30dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="1"
            tools:listitem="@layout/izvjestaj_item"
            android:id="@+id/stanje_aktivnih"
            app:layout_constraintTop_toBottomOf="@id/aktivni_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:text="STANJE TRANSAKCIONIH RAČUNA\nUGAŠENI RAČUNI"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintTop_toBottomOf="@id/stanje_aktivnih"
            android:layout_marginTop="55dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/ugasni_text"
            android:layout_marginLeft="30dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="1"
            tools:listitem="@layout/izvjestaj_item"
            android:id="@+id/stanje_ugasenih"
            app:layout_constraintTop_toBottomOf="@id/ugasni_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
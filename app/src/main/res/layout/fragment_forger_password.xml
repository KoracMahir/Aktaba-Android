<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/slika_pozadina"
tools:context=".fragments.main.login.ForgerPasswordFragment">

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/trideset_back"
        android:layout_marginTop="@dimen/trideset_back"
        android:background="@drawable/ic_header_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/back_btn_forgetpassword"/>

<ImageView
    android:id="@+id/logo"
    android:layout_width="90dp"
    android:layout_height="60dp"
    app:srcCompat="@drawable/ic_logo_akta"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="261dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zaboravili ste Vašu pristupnu šifru?  \nMolimo Vas da upišete e-mail adresu na koju \nprimate Newsletter."
        android:textColor="@color/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@id/logo"/>
<!-- Rectangle 29 -->
<EditText
    android:id="@+id/email"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="94dp"
    android:background="@drawable/ic_rectangle_29"
    android:hint="E-mail:"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/logo"
    android:layout_marginLeft="39dp"
    android:layout_marginRight="39dp"
    android:padding="13dp"
    android:textSize="13dp"/>


<Button
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:background="@drawable/login_btn"
    app:layout_constraintTop_toBottomOf="@id/email"
    android:layout_marginTop="64dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:text="POSALJI"
    android:textColor="@color/white"/>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main.home.KursnaListaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kursna lista"
            android:textColor="#3C6FAC"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:id="@+id/text3"
            />
        <HorizontalScrollView
            android:id="@+id/horizontal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text3"
            app:layout_constraintLeft_toLeftOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@color/akta_blue"
                        android:layout_width="100dp"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/code3"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:text="Zemlja"
                            android:textColor="@color/white"
                            android:fontFamily="@font/open_sans_bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:layout_marginRight="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/promjena3"
                        android:layout_width="81dp"
                        android:layout_height="30dp"
                        android:text="Å ifra valute"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="12dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/kurs3"
                        android:layout_width="103dp"
                        android:layout_height="30dp"
                        android:text="Oznaka valute"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="12dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/promet3"
                        android:layout_width="97dp"
                        android:layout_height="30dp"
                        android:text="Kupovni kurs"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="12dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/promet23"
                        android:layout_width="97dp"
                        android:layout_height="30dp"
                        android:text="Srednji kurs"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="12dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:background="#DAE4F4"
                        android:id="@+id/prodajni"
                        android:layout_width="98dp"
                        android:layout_height="30dp"
                        android:text="Prodajni kurs"
                        android:textColor="@color/text"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toBottomOf="@id/code"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_kursna"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/linear"
                    tools:itemCount="40"
                    tools:listitem="@layout/kursna_lista_item"/>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
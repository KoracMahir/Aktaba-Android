<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".mojRegistar.PrijaviGreskuFragment">

    <TextView
        android:id="@+id/textView127"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/open_sans"
        android:text="Ukoliko ste primjetili da prikazane informacije nisu ažurne prijavite grešku\nPromjene će biti vidljive po odobrenju od strane administratora."
        android:textColor="@color/text"
        android:textSize="@dimen/text_13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView97" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/trideset_back"
        android:layout_marginTop="@dimen/trideset_back"
        android:layout_marginRight="@dimen/trideset_back"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:height="300dp"
        android:background="@drawable/textinput_style_darkgreen"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Vaš tekst"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button24"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/akte_darkgreen"
        android:fontFamily="@font/open_sans_bold"
        android:text="POŠALJI"
        android:textColor="@color/white"
        android:textSize="@dimen/sesnaest"/>

</LinearLayout>
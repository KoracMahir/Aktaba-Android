<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/company_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BH TELECOM D.D. SARAJEVO"
        android:textColor="@color/registar"
        android:fontFamily="@font/open_sans_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="29dp"
        android:textSize="14dp"
        android:layout_marginTop="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Franca Lehara 7"
        app:layout_constraintTop_toBottomOf="@id/company_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/text"
        android:fontFamily="@font/open_sans"
        android:id="@+id/company_street"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sarajevo"
        app:layout_constraintTop_toBottomOf="@id/company_street"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/text"
        android:fontFamily="@font/open_sans"
        android:id="@+id/company_city"/>
    <Button
        android:id="@+id/brzi_profil"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:background="@drawable/outline_green"
        android:text="POGLEDAJ BRZI PROFIL"
        android:textColor="@color/registar"
        app:layout_constraintTop_toBottomOf="@id/company_city"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/full_profil"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:background="@color/registar"
        android:text="POGLEDAJ FULL PROFIL"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/brzi_profil"
        android:layout_marginTop="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
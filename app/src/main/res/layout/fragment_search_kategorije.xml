<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.main.vijesti.search.SearchKategorijeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/trideset_back"
            android:layout_marginLeft="@dimen/trideset_back"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans"
            android:text="Izaberite kategorije za prikaz vijesti.â€¨"
            android:textColor="@color/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conview"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:paddingRight="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView77">

            <ImageView
                android:id="@+id/imageView43"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/circle_border"
                app:layout_constraintLeft_toLeftOf="@id/conview"
                app:layout_constraintTop_toTopOf="@id/conview" />

            <ImageView
                android:id="@+id/imageView44"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_paper"
                android:tint="@color/akta_blue"
                app:layout_constraintBottom_toBottomOf="@id/imageView43"
                app:layout_constraintLeft_toLeftOf="@id/imageView43"
                app:layout_constraintRight_toRightOf="@id/imageView43"
                app:layout_constraintTop_toTopOf="@id/imageView43" />

            <TextView
                android:id="@+id/textView78"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/open_sans"
                android:text="VIJESTI"
                android:textColor="@color/text"
                app:layout_constraintBottom_toBottomOf="@id/imageView43"
                app:layout_constraintLeft_toRightOf="@id/imageView43"
                app:layout_constraintTop_toTopOf="@id/imageView43" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTAR"
        android:elevation="3dp"
        android:layout_marginTop="14dp"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/button"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/cijena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300KM"
        android:elevation="3dp"
        android:layout_marginTop="14dp"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/button"
        android:layout_marginRight="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/plus_expand"
        android:orientation="vertical"
        android:elevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/cijena2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30014KM"
            android:textSize="15sp"
            android:layout_marginRight="61dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/cijenamjesecno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30014KM"
            android:textSize="15sp"
            android:layout_marginRight="61dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"/>
    </LinearLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_marginTop="7.8dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:visibility="gone"
        android:elevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_ellipse_2"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/icon2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button"/>
    <ImageView
        android:visibility="gone"
        android:elevation="3dp"
        android:id="@+id/iconetxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_best_seller"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="@id/icon2"
        app:layout_constraintBottom_toBottomOf="@id/button"
        app:layout_constraintRight_toRightOf="@id/icon2"
        app:layout_constraintLeft_toLeftOf="@id/icon2"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sub_recycler_testiraj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button"
        tools:itemCount="4"
        tools:listitem="@layout/testiraj_subitem"
        android:layout_marginRight="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>